{
	"compilerOptions": {
		"outDir": "lib/",
		"allowJs": true,
		"declaration": true,
		"resolveJsonModule": true,
		"target": "ES2017",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["**/*.test.ts", "**/mocks/"]
}
