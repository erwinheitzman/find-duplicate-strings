{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "lib/",
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
